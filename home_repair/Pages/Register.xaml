<Page x:Class="home_repair.Pages.Register"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:home_repair.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Register">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="260"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Фамилия:"/>
            <TextBox x:Name="txtbLastName"/>
            <TextBlock Text="Имя:"/>
            <TextBox x:Name="txtbFirstName"/>
            <TextBlock Text="Отчество:"/>
            <TextBox x:Name="txtbMiddleName"/>
            <TextBlock Text="Логин:"/>
            <TextBox x:Name="txtbLogin"/>
            <TextBlock Text="Пароль:"/>
            <PasswordBox x:Name="pswbPassword"/>
            <TextBlock Text="Email:"/>
            <TextBox x:Name="txtbEmail"/>
            <TextBlock Text="Номер телефона:"/>
            <TextBox x:Name="txtbPhoneNumber"/>
            <Button x:Name="btnRegister" Margin="5,15,5,5" Content="Зарегистрироваться" Width="200" Click="btnRegister_Click"/>
        </StackPanel>
    </Grid>
</Page>
